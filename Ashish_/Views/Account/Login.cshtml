@model Ashish_.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="container mt-5 " style="padding:30px">
    <div class="row  ">
        
        <div class="col-4 offset-4 border border-primary rounded  ">
        <div >
            <h1 class="text-info" > Login</h1>
        </div>
        <h6 class="text-center text-primary">@TempData["SuccessMessage"]</h6>
            <form method="post" asp-action="Login" >

            <div class="form-group mb-3 ">
                <label asp-for="Username"></label>
                <input type="text" asp-for="Username" required class="form-control was-validated" placeholder="Enter Username" autocomplete="off"/>
                    <div  class="invalid-feedback">
                        Please choose a username.
                    </div>
            </div>
                <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Email" required class="form-control has-validation" placeholder="Enter Password" autocomplete="off" />
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="Isremember"  class="form-check-input"/>
                <label class="form-check-label" asp-for="Isremember"></label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" class=" form-control btn btn-block btn-primary mb-2"value="Login"/>
            </div>
          
            </form>
            <div class="text-center">
                <a asp-action="ForgotUserName" class="text-primary">Forgot UserName ?  </a>
                <a asp-action="ForgotPassword" class="text-primary"> Forgot Password ? </a>
            </div>
            <div class="text-center text-muted">-------OR-------</div>
            <div class="text-center"> New Register ?
                <a class="btn btn-primary " asp-action="SignUp" asp-controller="Account">Create Account</a>
            </div>
                              </div>
                   </div>
            </div>

