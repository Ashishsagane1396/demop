@model Ashish_.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded  " style="padding:40px">
        <div >
            <h1 class="text-info" > Create Account</h1>
        </div>
        <h6 class="text-danger text-center">@TempData["errorMessage"]</h6>
            <form method="post" asp-action="SignUp">

            <div class="form-group mb-3 ">
                <label asp-for="Username"></label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username" autocomplete="off"/>
            </div>
                <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" autocomplete="off" />
            </div>
            <div class="form-group mb-3 ">
                <label asp-for="PhoneNumber"></label>
                <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="Enter PhoneNumber" autocomplete="off" />
           
            </div>
                <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" autocomplete="off" />
            </div>
                <div class="form-group mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" autocomplete="off" />
            </div>
                <div class="form-group mb-3">
                <input type="submit" class="btn btn-primary form-control"/>
            </div>
        </form>
    </div>
    </div>
</div>

